<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                                  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/activity_my_group_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.myawardrecognition.MyAwardRecognitionActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/lay_toolbar_award" />

        <LinearLayout
            android:id="@+id/searchLinLay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_searchpng"
                app:tint="#707070" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/notosans_jp_medium"
                android:hint="Search by Name"
                android:includeFontPadding="false"
                android:inputType="text"
                android:textColor="#707070"
                android:textColorHint="#707070"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAwardRecognition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:overScrollMode="never"
            android:paddingTop="5dp" />
    </LinearLayout>
         