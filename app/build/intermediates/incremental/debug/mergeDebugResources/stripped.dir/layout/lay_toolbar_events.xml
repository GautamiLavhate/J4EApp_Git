<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#084268"
        android:orientation="horizontal" android:tag="layout/lay_toolbar_events_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:onClick="onBackClick"
                android:padding="1dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivMarkAttendance"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:visibility="gone"
            android:src="@drawable/ic_mark_attendance"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivEventStatus"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:src="@drawable/ic_event_status"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivAttendanceList"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:src="@drawable/ic_attendance_list"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:src="@drawable/ic_sharepng"
            app:tint="@color/white" />


        <ImageView
            android:id="@+id/ivedit"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:visibility="gone"
            android:src="@drawable/ic_editpng"
            app:tint="@color/white" />

    </LinearLayout>
         