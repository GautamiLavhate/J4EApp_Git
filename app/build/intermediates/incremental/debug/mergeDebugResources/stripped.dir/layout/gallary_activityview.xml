<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" android:tag="layout/gallary_activityview_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <com.justforentrepreneurs.j4eapp.abmainj4e.NonSwipeableViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnprev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_backwprd_ab"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large" />

    <Button
        android:visibility="gone"
        android:id="@+id/btnnext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/ic_forword_ab"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large" />


</RelativeLayout>
         