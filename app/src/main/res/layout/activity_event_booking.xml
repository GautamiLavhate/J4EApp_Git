<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.homemydiary.myevents.EventBookingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:background="@color/backblue" />

                <LinearLayout
                    android:id="@+id/ivBack"
                    android:onClick="onCloseClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_rectangle_white_6dp"
                    android:backgroundTint="#B3B8ADAD">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_close" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/eventtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:textColor="#084268"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventStartdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_light"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="Manojkumar Shinde"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_emailpng"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/eveventemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="contact@applexinfotech.com"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_category_png"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/eventcategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="contact@applexinfotech.com"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_call_blue"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="contact@applexinfotech.com"
                        android:textSize="16sp" />
                </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:backgroundTint="@color/white"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/how_many_seats"
                        android:textColor="#707070"
                        android:textSize="15sp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="30dp"
                        android:adjustViewBounds="true" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="7dp"
                        android:backgroundTint="@color/white"
                        android:visibility="gone"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:paddingVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:background="@drawable/rounded_rectangle_white_6dp"
                                        android:backgroundTint="#20C80E"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:background="@drawable/rounded_rectangle_white_6dp"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="2"
                                        android:textColor="@color/white"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="3"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="4"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="5"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="6"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="7"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="8"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="9"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="23dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="10"
                                        android:textColor="#707070"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="7dp"
                        android:backgroundTint="@color/white"
                        android:visibility="visible"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/notosans_jp_regular"
                                android:includeFontPadding="false"
                                android:text="Total Value:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/fesstotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_jp_bold"
                                android:includeFontPadding="false"
                                android:text="â‚¹ 1250.00"
                                android:textColor="#F82C2C"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/ab_event_booking" />
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


        <TextView
            android:visibility="gone"
            android:id="@+id/tvContinueBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/notosans_jp_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:text="@string/continue_booking"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</layout>