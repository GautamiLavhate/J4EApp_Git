<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                       
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" android:tag="layout/splash_permissiondialog_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="0dp"
        app:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:elevation="0dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:text="Missing Permissions"
                android:fontFamily="@font/notosans_jp_medium"
                android:textSize="18sp"
                android:gravity="left" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/notosans_jp_regular"
                android:textSize="@dimen/dp14"
                android:text="@string/you_have_to_grant_permissions"
                android:gravity="left" />

            <TextView
                android:id="@+id/goseeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/notosans_jp_regular"
                android:textSize="@dimen/dp14"
                android:text="@string/goseeting"
                android:gravity="left" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:paddingRight="@dimen/dp5"
                    android:paddingLeft="@dimen/dp5"
                    android:id="@+id/noclosetheapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grandper"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp10"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:textSize="@dimen/dp14"
                    />

                <TextView
                    android:id="@+id/okbtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:text="May be Later"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
         