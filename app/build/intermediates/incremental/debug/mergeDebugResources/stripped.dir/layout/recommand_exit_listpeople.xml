<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_half_top_white_20dp"
        android:orientation="vertical" android:tag="layout/recommand_exit_listpeople_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:paddingBottom="@dimen/dp12"
            android:paddingTop="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_jp_medium"
            android:layout_marginStart="@dimen/dp16"
            android:text="Recommendation People Created List"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#D2D0D0">
        </View>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listexit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="left"
                android:layout_marginStart="@dimen/dp16"
                android:text="You Already Recommended:"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/rvAlreadyExist"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createdlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="left"
                android:layout_marginStart="@dimen/dp16"
                android:text="Recommendation People Created:"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/rvRCreated"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="right"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btdOk"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:paddingLeft="@dimen/dp30"
                android:paddingRight="@dimen/dp30"
                android:gravity="center"
                android:background="@drawable/btd_active"
                android:text="Ok"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_jp_medium" />

        </LinearLayout>

    </LinearLayout>
         