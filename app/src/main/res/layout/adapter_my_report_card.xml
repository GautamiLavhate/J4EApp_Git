<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_rectangle_white_0dp"
        android:gravity="center"
        android:layout_marginBottom="-1dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMainHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_rectangle_white_0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rewardtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_jp_regular"
                android:includeFontPadding="false"
                android:text="1. Leads / requirementÂ  shared by him"
                android:textColor="#707070"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ponittotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="20"
                android:textColor="#2AD160"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:visibility="gone" />
    </LinearLayout>
</layout>