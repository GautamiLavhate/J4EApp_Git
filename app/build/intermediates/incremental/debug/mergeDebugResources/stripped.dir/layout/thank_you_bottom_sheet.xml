<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                                      
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" android:tag="layout/thank_you_bottom_sheet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.mymembershipbenefits.MyMembershipBenefitsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp15"
                app:cardElevation="@dimen/dp15"
                android:layout_marginBottom="-10dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp25"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_payment_complete_bm"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/dp16"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivcancle"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_close_rv"/>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/dp16"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="@dimen/dp25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_jp_bold"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="THANK YOU!"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_jp_regular"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Renew your Membership successful"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp16" />


                        <View
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginBottom="@dimen/dp20"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp2"
                            android:background="@drawable/ic_abc_33984">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_regular"
                                    android:gravity="left"
                                    android:text="Date"
                                    android:textColor="@color/textg5"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/curetdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:gravity="left"
                                    android:text="12-02-2021 To 11-02-2021"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_regular"
                                    android:gravity="right"
                                    android:text="TIME"
                                    android:textColor="@color/textg5"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:gravity="right"
                                    android:paddingLeft="@dimen/dp5"
                                    android:text="11:30 AM"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_jp_regular"
                                android:gravity="left"
                                android:text="TO"
                                android:layout_marginTop="@dimen/dp20"
                                android:textColor="@color/textg5"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_jp_medium"
                                android:gravity="left"
                                android:text="Manojkumar Shinde"
                                android:textColor="@color/black"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_jp_medium"
                                android:gravity="left"
                                android:text="manoj.applex360@applexinfotech.com"
                                android:textColor="@color/textg5"
                                android:textSize="14dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginBottom="@dimen/dp20"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_regular"
                                    android:gravity="left"
                                    android:text="AMOUNT"
                                    android:textColor="@color/textg5"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:gravity="left"
                                    android:text="â‚¹ 999.99"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_jp_regular"
                                android:gravity="right"
                                android:text="Completed"
                                android:textColor="#20C80E"
                                android:textSize="13dp" />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
         