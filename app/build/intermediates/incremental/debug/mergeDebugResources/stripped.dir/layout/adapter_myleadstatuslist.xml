<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                                         

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/adapter_myleadstatuslist_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.drawer.mydiary.MyLeads.MyLeadsStatusListActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#1DB50C"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/ivDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="Monday \n10:30am"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <View
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/llLeadStatus"
                android:layout_alignBottom="@+id/llLeadStatus"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/ivDate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rlDateBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivDate">

                <RelativeLayout
                    android:id="@+id/rlDate"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ovel_white">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Jan \n12"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llLeadStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/rlDateBar"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:text="Lead / requirement shared"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:text="Gaurav Patil meet Skill development"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
         