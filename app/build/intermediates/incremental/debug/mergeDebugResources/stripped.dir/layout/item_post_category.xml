<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp" android:tag="layout/item_post_category_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <RadioButton
            android:id="@+id/txtPostCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_jp_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivProfileImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"/>
    </LinearLayout>

         