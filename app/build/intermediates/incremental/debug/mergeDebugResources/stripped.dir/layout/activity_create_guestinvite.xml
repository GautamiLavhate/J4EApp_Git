<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                             

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:overScrollMode="never" android:tag="layout/activity_create_guestinvite_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.myguestinvites.CreateGuestInviteActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/toolbar"
                layout="@layout/lay_toolbar_lead_status_publish" />

           <LinearLayout
            android:id="@+id/layoutmanager"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edtGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/guest_name"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/llCategorySelection3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCategorySelection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tvCategory1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:hint="@string/event_name"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/crossfun"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_close_rv"
                        android:visibility="gone"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropDown1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_down"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropUp1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_up"
                        android:visibility="gone"
                        app:tint="@color/black" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/mobile_number1"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="10"
                android:layout_weight="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/checkbtd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_disableupgrade"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="16dp"
                    android:includeFontPadding="false"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="Check"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/paymentbyli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCategorySelection2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCategory2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:hint="Payment By"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivDropDown2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_down"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropUp2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_up"
                        android:visibility="gone"
                        app:tint="@color/black" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:overScrollMode="never"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtEntryfees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="Entry Fees (â‚¹)"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edtemailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/email_id"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtdesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/designation"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtcompanyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/company_name"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/makepayment"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/bg_upgrade"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:layout_gravity="center"
                android:text="Make A Payment"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/invitedPeople"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/bg_upgrade"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:layout_gravity="center"
                android:text="Invite"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutmanager1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         