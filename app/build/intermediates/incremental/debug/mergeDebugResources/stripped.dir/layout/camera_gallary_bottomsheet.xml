<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                                      
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" android:tag="layout/camera_gallary_bottomsheet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.mymembershipbenefits.MyMembershipBenefitsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp15"
                app:cardElevation="@dimen/dp15"
                android:layout_marginBottom="-10dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingBottom="@dimen/dp20"
                            android:paddingTop="@dimen/dp20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_jp_medium"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/dp16"
                            android:text="Add Photo"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:paddingBottom="@dimen/dp20"
                            android:paddingTop="@dimen/dp20"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/dp16"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivcancle"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_close_upgrade"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="#E4E4E4">
                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_marginBottom="@dimen/dp20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp50"
                            android:layout_marginRight="@dimen/dp50"
                            android:layout_marginBottom="@dimen/dp20"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardUseCompatPadding="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/camera"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:src="@drawable/ic_camera_svg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:paddingTop="@dimen/dp12"
                                        android:gravity="center"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:text="Camera "
                                        android:textColor="@color/black"
                                        android:textSize="18dp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardUseCompatPadding="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/Galleryimg"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:src="@drawable/ic_gallery_svg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:paddingTop="@dimen/dp12"
                                        android:gravity="center"
                                        android:fontFamily="@font/notosans_jp_medium"
                                        android:text="Gallery "
                                        android:textColor="@color/black"
                                        android:textSize="18dp"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
         