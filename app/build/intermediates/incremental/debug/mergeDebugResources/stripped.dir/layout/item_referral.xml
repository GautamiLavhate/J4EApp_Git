<?xml version="1.0" encoding="utf-8"?>

                                                        
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="3dp" android:tag="layout/item_referral_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FCFCFC"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayoutimagevepro"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="6dp">
                    <RelativeLayout
                        android:layout_width="45dp"
                        android:layout_height="54dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="54dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/imagevepro"
                                android:layout_width="45dp"
                                android:layout_height="54dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_default_user_svg" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivBday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_jp_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/fuctionalarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:textStyle="italic"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="12sp" />



                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginStart="16dp"
                android:layout_marginRight="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#B5B5B5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp16"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_regular"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:text="Indian Cook Required experience required"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:textStyle="italic"
                        android:includeFontPadding="false"
                        android:text="27 Mar 2020 at 12:30 PM"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/satatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:includeFontPadding="false"
                        android:text="Inside"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/notosans_jp_thin"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="#707070"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

         