<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                                          

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/activity_feedback_event_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.drawer.supportfeedback.J4ERatingandReviewActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/lay_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="Lorem ipsum dolor sit amet consectetur elit."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_jp_regular"
                android:includeFontPadding="false"
                android:text="Feedback:"
                android:textColor="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF"
                android:fontFamily="@font/notosans_jp_regular"
                android:gravity="start|top"
                android:hint="write your experience here...."
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxLength="140"
                android:maxLines="4"
                android:minLines="4"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/notosans_jp_regular"
                android:gravity="end"
                android:includeFontPadding="false"
                android:text="140 Character"
                android:textColor="#707070"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/rate_your_experience"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_jp_regular"
                android:includeFontPadding="false"
                android:text="@string/rate_this_products_and_services"
                android:textColor="#707070"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBarre" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_border_084268_rectangle_white_13dp"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/action_cancel"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_rectangle_white_13dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
         