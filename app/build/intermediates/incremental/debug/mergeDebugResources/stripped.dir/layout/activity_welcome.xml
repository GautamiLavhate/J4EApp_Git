<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical"
        android:visibility="visible" android:tag="layout/activity_welcome_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.welcome.WelcomeActivity">

        <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tagSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:padding="7dp"
                android:text="@string/skip"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:src="@drawable/welcome_bottom_bg" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpIntroSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/indicatorLayout"
            android:layout_below="@+id/tvSkip"
            android:layout_marginBottom="10dp" />

        <com.justforentrepreneurs.j4eapp.abmainj4e.ui.welcome.IndicatorLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivNext"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:indicatorCount="4" />

        <LinearLayout
            android:id="@+id/ivNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/ivBottom"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:background="@drawable/ovel_white_shadow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_skip_arrow" />
        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:tag="binding_1">
            <include
                layout="@layout/ab_welcome"/>
        </RelativeLayout>

    </RelativeLayout>

         