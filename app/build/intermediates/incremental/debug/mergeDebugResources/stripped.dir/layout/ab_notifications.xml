<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp3"
                android:scaleType="fitXY"
                android:background="@color/light_gray"
                android:src="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/notificationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_jp_regular"
                        android:includeFontPadding="false"
                        android:background="@color/light_gray"
                        android:textColor="@color/light_gray"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/notosans_jp_light"
                        android:includeFontPadding="false"
                        android:text="29 Oct 2021, 04:05 PM"
                        android:background="@color/light_gray"
                        android:textColor="@color/light_gray"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/leadtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/notosans_jp_light"
                    android:includeFontPadding="false"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                    android:textColor="@color/light_gray"
                    android:background="@color/light_gray"
                    android:textSize="11sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/leadtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans_jp_light"
            android:includeFontPadding="false"
            android:text="Attempted To Contact"
            android:background="@color/light_gray"
            android:textColor="@color/light_gray"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/udatedbyli"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Updatedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:fontFamily="@font/notosans_jp_regular"
                android:includeFontPadding="false"
                android:text="Updated By:"
                android:layout_marginRight="5dp"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Updatedbyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:textStyle="italic"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="Manojkumar Shinde"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>