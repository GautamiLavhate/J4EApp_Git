<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/notosans_jp_bold"
                android:includeFontPadding="false"
                android:text="Indian Cook Required experience required"
                android:textColor="@color/light_gray"
                android:background="@color/light_gray"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:civ_border_color="@color/light_gray"
                    android:background="@color/light_gray"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_jp_bold"
                            android:includeFontPadding="false"
                            android:text="Ghansham Pawar"
                            android:textColor="@color/light_gray"
                            android:background="@color/light_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvNumberCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_rectangle_white_7dp"
                            android:backgroundTint="@color/light_gray"
                            android:fontFamily="@font/notosans_jp_medium"
                            android:includeFontPadding="false"
                            android:layout_marginStart="10dp"
                            android:paddingTop="1dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="1dp"
                            android:text="0"
                            android:textColor="@color/light_gray"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_jp_regular"
                            android:includeFontPadding="false"
                            android:text="Recommended"
                            android:textColor="@color/light_gray"
                            android:background="@color/light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/dobet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/notosans_jp_medium"
                            android:includeFontPadding="false"
                            android:text="Today at 11.30 pm"
                            android:textColor="@color/light_gray"
                            android:background="@color/light_gray"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/requirementdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_jp_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Lorem Ipsum is simply dummy text of the"
                android:textColor="@color/light_gray"
                android:background="@color/light_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</layout>