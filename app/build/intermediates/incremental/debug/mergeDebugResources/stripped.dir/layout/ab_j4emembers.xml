<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal" android:tag="layout/ab_j4emembers_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/imagevepro"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            android:src="@color/light_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/memname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/messageid"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:background="@color/light_gray"
                android:src="@color/light_gray" />

            <ImageView
                android:id="@+id/phonecall"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:background="@color/light_gray"
                android:src="@color/light_gray" />

            <ImageView
                android:id="@+id/connect"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:background="@color/light_gray"
                android:src="@color/light_gray" />
        </LinearLayout>
    </LinearLayout>
         