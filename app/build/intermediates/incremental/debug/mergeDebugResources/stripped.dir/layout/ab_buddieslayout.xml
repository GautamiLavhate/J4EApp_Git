<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal" android:tag="layout/ab_buddieslayout_0" xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/imagevepro"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@color/light_gray" />

            <ImageView
                android:id="@+id/imageselected"
                android:layout_width="20dp"
                android:visibility="gone"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:src="@color/light_gray" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namebudd"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:background="@color/light_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:background="@color/light_gray"
                android:textColor="#707070"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/membership"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:background="@color/light_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visiblemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/msg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@color/light_gray" />

            <ImageView
                android:id="@+id/phonecall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@color/light_gray" />
        </LinearLayout>
    </LinearLayout>
         