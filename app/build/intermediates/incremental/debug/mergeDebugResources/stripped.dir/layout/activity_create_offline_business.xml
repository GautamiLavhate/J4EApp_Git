<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                  

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:overScrollMode="never" android:tag="layout/activity_create_offline_business_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homeService.CreateOfflineBusinessActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/toolbar"
                layout="@layout/lay_toolbar_lead_status_publish" />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/radioGrp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:text="@string/received"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp"
                    app:tint="@color/colorPrimary" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:text="@string/given"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp"
                    app:tint="@color/colorPrimary" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCategorySelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tvCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:hint="@string/business_with"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/crossfun"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_close_rv"
                        android:visibility="gone"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropDown"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_down"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropUp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_up"
                        android:visibility="gone"
                        app:tint="@color/black" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:scrollbars="vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:includeFontPadding="false"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/service_product"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="start|top"
                    android:hint="@string/_17_feb_2020"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:adjustViewBounds="true"
                    android:padding="7dp"
                    android:src="@drawable/ic_calender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="start|top"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:text="₹ "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="start|center"
                    android:hint="@string/price"
                    android:includeFontPadding="false"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/remark"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         