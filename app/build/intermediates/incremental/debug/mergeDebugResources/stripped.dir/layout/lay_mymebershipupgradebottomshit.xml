<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                                      
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content" android:tag="layout/lay_mymebershipupgradebottomshit_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.mymembershipbenefits.MyMembershipBenefitsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp15"
            app:cardElevation="@dimen/dp15"
            android:layout_marginBottom="-10dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/memberdetails"
                        android:paddingBottom="@dimen/dp20"
                        android:paddingTop="@dimen/dp20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp16"
                        android:text="Membership Details"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <LinearLayout
                        android:paddingBottom="@dimen/dp20"
                        android:paddingTop="@dimen/dp20"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/dp16"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivcancle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_close_upgrade"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E4E4E4">
                </View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerUpgradePlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/linearlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" android:tag="binding_1">

                        <include layout="@layout/ab_upgradepopupli"/>

                        <include layout="@layout/ab_upgradepopupli"/>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
         