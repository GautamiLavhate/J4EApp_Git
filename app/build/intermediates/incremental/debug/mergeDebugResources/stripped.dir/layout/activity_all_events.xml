<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical" android:tag="layout/activity_all_events_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/toolbar"
            layout="@layout/lay_toolbar" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabHome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="start|center_horizontal"
            android:background="#fcfcfc"
            android:textAlignment="gravity"
            app:tabGravity="fill"
            app:tabIndicatorColor="#3E3E3E"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorHeight="2dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#3E3E3E"
            app:tabTextAppearance="@style/MineCustomTabText16"
            app:tabTextColor="#803E3E3E" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8" />

        <com.justforentrepreneurs.j4eapp.abmainj4e.NonSwipeableViewPager
            android:id="@+id/vpHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never" />
    </LinearLayout>


        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommon"
                android:layout_marginTop="@dimen/dp5"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/Noevents"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_post__default_images" />

                <TextView
                    android:id="@+id/default_text"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:gravity="left"
                    android:text="No Events Available"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rvevents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
                <include layout="@layout/ab_eventslayout" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
         