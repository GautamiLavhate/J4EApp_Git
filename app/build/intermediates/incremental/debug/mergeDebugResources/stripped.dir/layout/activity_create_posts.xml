<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical" android:tag="layout/activity_create_posts_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homeService.CreatePostsActivity">


        <include
            android:id="@+id/toolbar"
            layout="@layout/lay_toolbar_lead_status_publish" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layoutmanager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FCFCFC"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llCategorySelection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/tvCategory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/notosans_jp_medium"
                                android:hint="@string/select_post_category"
                                android:includeFontPadding="false"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/crossfun"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_close_rv"
                                android:visibility="gone"
                                app:tint="@color/black" />

                            <ImageView
                                android:id="@+id/ivDropDown"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_drop_down"
                                app:tint="@color/black" />

                            <ImageView
                                android:id="@+id/ivDropUp"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_drop_up"
                                android:visibility="gone"
                                app:tint="@color/black" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclecategory"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:scrollbars="vertical"
                            android:visibility="gone" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="start|top"
                        android:hint="@string/write_something_about"
                        android:includeFontPadding="false"
                        android:inputType="textMultiLine"
                        android:minLines="10"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/addimage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:background="@drawable/ic_add_image"/>

                            <ImageView
                                android:id="@+id/imgSelectedImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:visibility="gone"/>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/delete_ic"
                            app:tint="@color/black"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"/>
                    </RelativeLayout>






                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/Givercover"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:backgroundTint="#E6E6E6"
                android:padding="12dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/ic_info_svg"
                    app:tint="@color/black"
                    android:layout_gravity="center"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:id="@+id/rvPostInfo"/>



            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutmanager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
    </LinearLayout>
         