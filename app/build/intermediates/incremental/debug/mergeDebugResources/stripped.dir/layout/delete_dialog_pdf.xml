<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" android:tag="layout/delete_dialog_pdf_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/dp14"
            app:cardCornerRadius="@dimen/dp14"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="0dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TakePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp25"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="1dp"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_gravity="left"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:textSize="18dp"
                    android:text="Are you sure you want to delete this PDF?"
                    android:gravity="left" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp16"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/button_border_sign_up"
                        android:id="@+id/No"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="center"
                        android:text="No"
                        android:paddingRight="@dimen/dp25"
                        android:paddingLeft="@dimen/dp25"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginRight="@dimen/dp25"
                        android:textColor="@color/md_grey_dark"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/yes"
                        android:background="@drawable/button_border_sign_up"
                        android:layout_marginTop="@dimen/dp25"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:gravity="center"
                        android:text="Yes"
                        android:paddingRight="@dimen/dp25"
                        android:paddingLeft="@dimen/dp25"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
         