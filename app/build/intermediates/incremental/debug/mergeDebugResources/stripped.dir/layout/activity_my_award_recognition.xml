<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                                                  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical" android:tag="layout/activity_my_award_recognition_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.homemydiary.myawardrecognition.MyAwardRecognitionActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/lay_toolbar_award" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAwardRecognition"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/NoGuestInvited"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_reward_svg" />

            <TextView
                android:id="@+id/defaultText"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="left"
                android:text="No Reward Available"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="binding_1">

            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
            <include layout="@layout/ab_awardrecognition"/>
