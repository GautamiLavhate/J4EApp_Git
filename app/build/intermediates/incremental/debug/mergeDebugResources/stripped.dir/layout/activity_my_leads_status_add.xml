<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                        

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:overScrollMode="never" android:tag="layout/activity_my_leads_status_add_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.drawer.mydiary.MyLeads.MyLeadsStatusAddActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/toolbar"
                layout="@layout/lay_toolbar_lead_status_publish" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCategorySelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:hint="Select Lead Status"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivDropDown"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_down"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/ivDropUp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="5dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_drop_up"
                        android:visibility="gone"
                        app:tint="@color/black" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:overScrollMode="never"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/noteTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="Purpose of calling"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edtFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/enter_status"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxLength="140"
                android:maxLines="4"
                android:minLines="4"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/paymentselectedli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:text="@string/enter_amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:includeFontPadding="false"
                        android:text="â‚¹"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:hint="00000"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:visibility="gone"
                android:id="@+id/enterdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/enter_date"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@drawable/ic_calender_svg"
                android:minLines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:importantForAutofill="no" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/Radioli"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/radiotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/enter_amount"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/radioGrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="16dp">
                    <RadioButton
                        android:id="@+id/radioM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:checked="false"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="Yes"
                        />
                    <RadioButton
                        android:id="@+id/radioF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:checked="false"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="No"
                        />
                </RadioGroup>
            </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_border_084268_rectangle_white_6dp"
                android:fontFamily="@font/notosans_jp_medium"
                android:gravity="start|top"
                android:hint="@string/location"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:visibility="gone"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         