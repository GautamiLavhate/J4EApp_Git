<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.homemydiary.mymembershipbenefits.MyMembershipBenefitsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCFCFC"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/lay_toolbar_edit" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_rectangle_white_8dp"
                    android:backgroundTint="@color/colorPrimary">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginStart="96dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/backgroundmember" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="90dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp">
                                <ImageView
                                    android:id="@+id/ivProduct"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_default_user_svg" />
                            </androidx.cardview.widget.CardView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/fullnametv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/designation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/mobilenumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="86dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="@dimen/dp13"
                            android:background="@drawable/ic_lines_svh" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/llPlan"
                                android:layout_marginBottom="3dp"
                                android:layout_toStartOf="@+id/tvUpgrade"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp5"
                                    android:fontFamily="@font/notosans_jp_regular"
                                    android:includeFontPadding="false"
                                    android:text="Valid till"
                                    android:textColor="@color/white"
                                    android:textSize="9sp" />

                                <TextView
                                    android:id="@+id/Validdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_regular"
                                    android:includeFontPadding="false"
                                    android:textColor="#FF9238"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvUpgrade"
                                android:layout_width="83dp"
                                android:layout_height="36dp"
                                android:layout_alignBottom="@+id/llPlan"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/grediant_orange"
                                android:fontFamily="@font/notosans_jp_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/upgrade"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llPlan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginBottom="5dp"
                                android:orientation="vertical"
                                android:layout_toRightOf="@+id/ll">

                                <TextView
                                    android:id="@+id/Membershiptitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:textColor="#FB5831"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:text="Benefit"
                    android:textColor="#285B7A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/benefitstv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/notosans_jp_regular"
                    android:includeFontPadding="false"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="@dimen/dp1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_jp_bold"
                            android:includeFontPadding="false"
                            android:text="Membership Details"
                            android:textColor="#285B7A"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/caostmb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/notosans_jp_bold"
                            android:includeFontPadding="false"
                            android:textColor="#FF9238"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/baseicmember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/notosans_jp_medium"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.1"
                        android:textAllCaps="true"
                        android:textColor="#FFAC09"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerFeatues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_medium"
                    android:includeFontPadding="false"
                    android:text="Referral Code :"
                    android:textColor="#285B7A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtReferralCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_jp_regular"
                    android:includeFontPadding="false"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/imgCopy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_content_copy"
                    app:tint="#285B7A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/Upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_border_dp"
                    android:text="Upgrade"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_jp_medium" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/Renew"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/edittext_border_dp"
                    android:text="Renew"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_jp_medium" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/ab_membershipbenefit"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>