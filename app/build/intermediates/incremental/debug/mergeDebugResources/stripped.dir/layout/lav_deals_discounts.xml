<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/lav_deals_discounts_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/llDealsOfTheDay"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_deal_of_the_day" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/deals_of_the_day"
                android:textColor="#084268"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHotel"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_hotel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/hotel"
                android:textColor="#084268"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRestaurant"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_restaurant" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/restaurant"
                android:textColor="#084268"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWebsite"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_website" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/website"
                android:textColor="#084268"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSeeMore"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_see_more" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_jp_medium"
                android:includeFontPadding="false"
                android:text="@string/see_more"
                android:textColor="#084268"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
         