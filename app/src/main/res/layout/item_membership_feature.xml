<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdTitle"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:cardBackgroundColor="#084268"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/notosans_jp_medium"
                                    android:gravity="center"
                                    android:text="Registered"
                                    android:textColor="@color/white"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/txtAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/notosans_jp_bold"
                                    android:gravity="center"
                                    android:text="â‚¹ 10,000.00"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFeatureCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/crdTitle"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="30dp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnUpgrade"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:background="@drawable/bg_upgrade"
            android:fontFamily="@font/notosans_jp_medium"
            android:text="Upgrade"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />
        <Button
            android:visibility="gone"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_upgrade"
            android:fontFamily="@font/notosans_jp_medium"
            android:text="ABC"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_below="@+id/ll"
            android:layout_marginTop="-30dp"/>

    </RelativeLayout>


</layout>